<%- include('partials/header') %>

<div style="text-align: center;">
  <h2 class="page-title">Withdraw Funds</h2>
</div>

<div class="withdraw-container">
    <form id="withdraw-form" class="withdraw-form" action="/wallet/withdraw" method="POST">

        <label>Withdraw Amount</label>
        <input type="number" min="1" placeholder="$0.00" required name="amount">

        <label>Bank Account (fake)</label>
        <input type="text" maxlength="16" placeholder="xxxx xxxx xxxx xxxx" name="bankNumber">

        <label>Routing Number (fake)</label>
        <input type="text" maxlength="9" placeholder="xxxxxxxxx" name="routingNumber">

        <button type="submit" class="btn withdraw-btn">Confirm Withdrawal</button>
    </form>

    <p id="withdraw-success" class="success-message" style="display:none;">
        Withdrawal Successful!
    </p>
    <p id="withdraw-error" class="error-message" style="color:red; display:none;">
        Insufficient funds!
    </p>
</div>

<script>
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get("success") === "1") {
      document.getElementById("withdraw-success").style.display = "block";
  }
  if (urlParams.get("error") === "1") {
      document.getElementById("withdraw-error").style.display = "block";
  }
</script>

<%- include('partials/footer') %>
